// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  lastname  String
  email     String   @unique
  password  String
  role      Role     @default(USER)

  clients Client[]

  @@map("employees")
}

model Client {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  cpf       String

  sales Sale[]

  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int

  @@map("clients")
}

model Sale {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  qts_product String

  client   Client @relation(fields: [clientId], references: [id])
  clientId Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@map("sales")
}

model Product {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  cod_refence   String
  trader_comme  String
  factory       String
  qts_item      String
  value_sale    String
  data_validity String
  due_date      String

  sales Sale[]

  company   Company @relation(fields: [companyId], references: [id])
  companyId Int

  @@map("products")
}

model Company {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  cnpj      String

  products Product[]

  @@map("companys")
}

enum Role {
  USER
  ADMIN
}
